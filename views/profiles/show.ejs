<%- include('../partials/header') %>

<section id="show-page">
    <img src="<%= user.avatar %>" alt="Avatar">
    <div>Name: <%= user.name %></div>
    <div>Bio: <%= user.bio %></div>
</section>
<% if (user.reviews.length) { %>
    <table id="show-page-reviews" class="styled-table">
        <thead>
            <tr>
                <th>User</th>
                <th>Date</th>
                <th>Review</th>
                <th>Rating</th>       
            </tr>
        </thead>
        <tbody>
            <% let total = 0 %>
            <% user.reviews.forEach(function(r) { %>
                <% total += r.rating %>
                <tr>
                    <td class="review-user" id="styled-table"><img src="<%= r.userAvatar %>" alt="Avatar"></td>
                    <td id="table-body"><%= r.createdAt.toLocaleDateString() %></td>
                    <td id="table-body"><%= r.content %></td>
                    <td id="table-body"><%= r.rating %></td>
                    <% if (user && user._id.equals(r.user)) { %>
                        <td>  
                            <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                                <button type="submit">X</button>
                            </form>
                            <% } %>
                        </td>
                    </tr>
                    <% }); %>
                    <tr>
                        <td colspan="2"></td>
                        <td id="table-body" style="border: none;"><strong><%= (total / user.reviews.length).toFixed(1) %></strong></td>
                    </tr>
                </tbody>
            </table>
            <% } else { %>
                <h5>No Reviews Yet</h5>
                <% } %>
                
    <% if (user) { %>
    <form id="add-review-form" method="POST" action="/profiles/<%= user._id %>/reviews">
        <div>Leave a review</div>
        <textarea name="content" id="review-form-item"></textarea>
        <label>Rating:</label>
        <select name="rating" id="review-form-item">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <input type="submit" value="Add Review" id="review-form-item">
    </form>
    <% } %>
                <%- include('../partials/footer') %>