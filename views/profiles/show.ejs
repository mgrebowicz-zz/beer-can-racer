<%- include('../partials/header') %>

<section id="show-page">
    <img src="<%= user.avatar %>" alt="Avatar">
    <div>Name: <%= user.name %></div>
    <div>Bio: <%= user.bio %></div>
    <div>Reviews:</div>
    <% if (user) { %>
    <form id="add-review-form" method="POST" action="/profiles/<%= user._id %>/reviews">
        <label>Review:</label>
        <textarea name="content"></textarea>
        <label>Rating:</label>
        <select name="rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <input type="submit" value="Add Review">
    </form>
    <% } %>
</section>
<% if (user.reviews.length) { %>
<table>
    <thead>
        <tr>
            <th>User</th>
            <th>Date</th>
            <th>Review</th>
            <th>Rating</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% let total = 0 %>
        <% user.reviews.forEach(function(r) { %>
        <% total += r.rating %>
        <tr>
            <td class="review-user"><img src="<%= r.userAvatar %>" alt="Avatar"><%= r.userName %></td>
            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.content %></td>
            <td><%= r.rating %></td>
            <td>
                
                <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                    <button type="submit">X</button>
                </form>
                
            </td>
        </tr>
        <% }); %>
        <tr>
            <td colspan="2"></td>
            <td><strong><%= (total / user.reviews.length).toFixed(1) %></strong></td>
        </tr>
    </tbody>
</table>
<% } else { %>
<h5>No Reviews Yet</h5>
<% } %>

<%- include('../partials/footer') %>